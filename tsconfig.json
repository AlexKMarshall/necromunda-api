{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      // "*": ["node_modules/*"],
      // "express": ["./@types/*"]
    },
    "typeRoots": ["@types", "node_modules/@types"],
    "strict": true
  },
  "include": ["src/**/*", "@types"],
  "skipLibCheck": true
}
